package ir.asta.training.contacts.services.impl;

import java.text.ParseException;
import java.util.List;

import javax.inject.Inject;
import javax.inject.Named;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import javax.ws.rs.core.Context;
import org.json.JSONException;
import utils.Settings;
import ir.asta.training.contacts.entities.CaseEntity;
import ir.asta.training.contacts.entities.UserEntity;
import ir.asta.training.contacts.manager.AuthManager;
import ir.asta.training.contacts.manager.CaseManager;
import ir.asta.training.contacts.services.CaseService;
import ir.asta.wise.core.datamanagement.ActionResult;

@Named("caseService")
public class CaseServiceImpl implements CaseService {
	@Context HttpServletRequest request;
	@Context HttpServletResponse response;
	
	Settings settings = new Settings();
	
	@Inject
	CaseManager manager;

	@Override
	public ActionResult<CaseEntity> postNewCase(String newCaseString) throws JSONException, ParseException{
		return manager.postNewCase(newCaseString, request);
	}

	@Override
	public ActionResult<Boolean> deleteCase(Long id) {
		return manager.deleteCase(id);
	}

	@Override
	public ActionResult<Integer> deleteAllCases(String password) {
		return manager.deleteAllCases(password);
	}

	@Override
	public ActionResult<List<CaseEntity>> getMyCases(String username, String token) {
		if(!token.equals(request.getSession().getAttribute("token"))){
			ActionResult<List<CaseEntity>> answer = new ActionResult<List<CaseEntity>>();
			answer.setSuccess(false);
			answer.setMessage(settings.TOKEN_DOES_NOT_MATCH);
			return answer;
		}else{
			return manager.getMyCases(username);
		}
	}

	@Override
	public ActionResult<List<CaseEntity>> getMyCasesToFulfill(String username, String token) {
		if(!token.equals(request.getSession().getAttribute("token"))){
			ActionResult<List<CaseEntity>> answer = new ActionResult<List<CaseEntity>>();
			answer.setSuccess(false);
			answer.setMessage(settings.TOKEN_DOES_NOT_MATCH);
			return answer;
		}else{
			return manager.getMyCasesToFulfill(username);
	}

}
